  title Sign Up
.content
  .container
    .row.justify-content-center
      .col-md-6.contents
        .row.justify-content-center
          .col-md-12
            .form-block
              .mb-4
                h3 Sign Up
                p.mb-4 Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.
              form#form-register(action='/authen/api/register' method='post')
                .form-group.first
                  label(for='name') Fullname
                  input#name.form-control(type='text')
                .form-group.first
                  label(for='email') Email
                  input#email.form-control(type='text')
                .form-group
                  label(for='password') Password
                  input#password.form-control(type='password')
                .form-group.last.mb-4
                  label(for='re-password') Re-type Password
                  input#re-password.form-control(type='password')
                .d-flex.mb-5.align-items-center
                  label.control.control--checkbox.mb-3.mb-sm-0
                    span.caption
                      | Agree our 
                      a(href='#') Terms and Conditions
                    input(type='checkbox')
                    .control__indicator
                  span.ml-auto
                    a.forgot-pass(href='/authen/login') Sign In
                button#btn-register.btn.btn-pill.text-white.btn-block.btn-primary(type='submit') Register
                span.d-block.text-center.my-4.text-muted  or register with
                .social-login.text-center
                  a.facebook(href='#')
                    span.icon-facebook.mr-3
                  a.twitter(href='#')
                    span.icon-twitter.mr-3
                  a.google(href='#')
                    span.icon-google.mr-3
