extends layout

block content
    div#wraper
        div.container.shadown.bg-light.shadow.rounded.py-3
            header
                .container.my-5.text-center
                    h2=title 
                    h3 Welcome to Deeplearning-Bill extract
            main
                .container.py-5
                    .row
                        .col-12.col-md-6
                            select#langsel.custom-select.custom-select-sm
                                option(value='vie' selected='')  Vietnamese 
                                //- option(value='jpn')  Japanese 
                                //- option(value='kor')  Korean 
                                //- option(value='eng')  English 
                                //- option(value='enm')  English (Old) 
                                //- option(value='fra')  French 
                                //- option(value='rus')  Russian 
                                //- option(value='chi_sim')  Chinese 
                                //- option(value='chi_tra')  Traditional Chinese 
                        .col-12.col-md-4.mt-3.mt-md-0
                            .box
                                form.form-inline
                                    input#file-1.inputfile.inputfile-1(type='file' name='file-1[]' data-multiple-caption='{count} files selected' multiple='' accept='image/*')
                                    label(for='file-1')
                                        svg(xmlns='http://www.w3.org/2000/svg' width='20' height='17' viewbox='0 0 20 17')
                                            path(d='M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z')
                                        span Choose a file or take image&mldr;
                    .row.mt-5
                        .col-12.col-md-5.border.pb-3
                            h3 General:
                            .image-container#slide-img-box
                                #img-box
                                    img#selected-image.col-12.p-0(src='/images/test.PNG' alt="target image")

                        .col-12.col-md-2.text-center.d-flex.justify-content-center.align-items-stretch#iconSpin

                            div.d-flex.align-items-center.flex-column.align-self-center
                                i#arrow-right.fas.fa-arrow-right.d-none.d-md-block.align-self-center
                                i#arrow-down.fas.fa-arrow-down.d-block.d-md-none.align-self-center
                                span#content-pro-add
                        .col-12.col-md-5.border
                            h3 Detail result:
                            #sub-image-extracted
                    .row
                        .col-12
                            .row
                                .col-12
                                    .row 
                                        .col-12.mb-3
                                            //- #log
                                            //-     span#startPre
                                            //-         a#startLink.btn.btn-outline-success Click here to extract text on this image
                                            //-         br
                                            //-         |  or choose your own image
                                            #progress-area.text-center.pb-3
                                                h3 Content extraction process:
                                            .d-flex.justify-content-center.flex-md-nowrap.flex-sm-wrap#log-pro
                                                #log-address.pr-md-2
                                                #log-date-time
                                                #log-detail.pl-md-2.w-sm-100
                                                #log-total.pl-md-2.w-sm-100
                                .col-12
                                    .row 
                                        .col
                                            #rs-area.text-center.pb-3

                                            table#result.table.table-striped
                                                thead#header-result
                                                    tr
                                                        th(colspan=2 scope="col")
                                                            h3 Text Result:
                                                tbody
                                                    tr#address
                                                        th(scope="row").title-result
                                                            h4 Address:
                                                        td#address-show
                                                    tr#date-time
                                                        th(scope="row").title-result
                                                            h4 Date time:
                                                        td#date-time-show
                                                    tr#detail 
                                                        th(scope="row").title-result
                                                            h4 Detail:
                                                        td#detail-show
                                                    tr#total
                                                        th(scope="row").title-result
                                                            h4 Total:
                                                        td#total-show
                                .col-12
                                    .row 
                                        .col-12
                                            #test
                                                img

